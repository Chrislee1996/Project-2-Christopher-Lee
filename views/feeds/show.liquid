{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h3>Amount: {{ feed.amount }}</h3>
        <h6>Body: {{ feed.body }}</h6>
        {% if feed.owner == userId %}
        <div class="btn-group">

            <a href="/feeds/{{ feed.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/feeds/{{ feed.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}
{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/feed/" method="POST">
        <fieldset>
            <legend>New Music thought</legend>
            <label class="form-label">Artist: </label>
            <input 
                type="text" 
                name="artist" 
                placeholder="Artist Name"
                class="form-control"
            >
            <label class="form-label">Song(s):</label>
            <input 
                type="text" 
                name="song" 
                placeholder="Song or Songs" 
                class="form-control"
            >
            <label class="form-label">Album(s):</label>
            <input 
                type="text" 
                name="album" 
                placeholder="album(s)" 
                class="form-control"
            >
            <textarea input 
            type="text" 
            name="opinion"
            placeholder="What's on your mind?"></textarea>
        </fieldset>
        <input type="submit" value="Post" class="btn btn-success">
    </form>
</div>
{% endblock %}
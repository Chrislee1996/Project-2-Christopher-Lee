{% layout "layout.liquid" %}
{% block content %}
<body class = 'indexbody'> 
    <h2>Welcome {{username | capitalize}}!  I hope you enjoy your stay at Rate my Music! </h2> 
    <h5> Not sure where to begin? Here are some top hits for you!</h5>
    <a href="/artistCharts/">  Browse by artist </a></br>
    <a href="/genre/">Browse by genre</a>

{% for toptrack in toptracks %}
    <div style="color: rgb(231, 223, 223)">
        <hr style="color: #eee;"> 
            <h4>{{toptrack.name}} by   <a href ={{toptrack.artist.url}} target="_blank">{{toptrack.artist.name}} </a>  </h4> 
            <h5> Total play count: {{toptrack.playcount}}  </h5>
            <h2><a href = {{toptrack.url}} target="_blank">  Check it out! </a>
        </hr>
    </div>
{% endfor %}  

{% endblock %}




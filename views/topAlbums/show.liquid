{% layout 'layout.liquid'%}

{% block content %}
    <body class="text-center">
        <form action="/topAlbums/" method ="POST">
            <input type="text"  name="artist" placeholder= 'Enter an Artist'/> 
            <input type="submit" class="btn btn-success">
        </form> </br>
        <h1 class="display-6">Top Albums for {{album[0].artist.name}}:</h1>
        <!-- {{album.name}} -->
        {% for albums in album %}
        <hr> 
            <h5 class="display-4 "> {{albums.name}}:</h5> </br>
            <a href={{albums.url}} target="_blank">
          <img src = {{albums.image[2]['#text']}}> </a> </br>
            <a href={{albums.url}} target="_blank" class="display-4">Check {{albums.name}} out!</a> </br>
            <div class="display-6">  # Of Plays: {{albums.playcount}} </div>
        </hr>
        {% endfor %}


{% endblock %}


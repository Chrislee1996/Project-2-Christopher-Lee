{% layout 'layout.liquid'%}
{% block content %}
    <body class="text-center">
        <form action="/favoriteArtist/" method ="POST">
            <input type="text"  name="favoriteArtist"> 
            <input type="submit" class="btn btn-success">

        <h1 class="display-3">Top Artists:</h1>
        {% for favoriteArtists in favoriteArtist %}
        <ul> 
            <hr>
                <p> <h2> {{favoriteArtists['@attr'].rank}}.{{favoriteArtists.name}} </h2> Play Count: {{favoriteArtists.playcount}}  </p>
                <a href= {{favoriteArtists.url}} target='_blank' class="display-6">Check {{favoriteArtists.name}} out!</a>
            </hr>
        </ul>
        {% endfor %}
        
    </form> </br> 

</body>


 

{% endblock %}
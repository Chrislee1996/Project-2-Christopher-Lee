{% layout 'layout.liquid'%}
{% block content %}
<div class="container; text-center" style="border: rgb(58, 54, 54) 2px solid;"> 
    <h3> Profile </h6>
    <h2> {{username | capitalize}}</h4>
        <p>{{profile.id}} </p>
</div>

<div class="container text-center">
    <form action="/profiles/favoriteTrack" method ="POST"> 
        <input type="checkbox" class="btn-check" id="btn-check-outlined" autocomplete="off">
        <button name="userFavoriteArtist" class="btn btn-outline-info" for="btn-check-outlined"> Reveal </button>
</div>

<div class="container text-center">
    <form method ="POST"> 
        <a href="/profiles/favoriteArtist" class="btn btn-outline-light" for="btn-check-2"> Next </a>
        {% for userFavoriteTracks in userFavoriteTrack %}
        <ul> 
            <p> <h2> {{userFavoriteTracks['@attr'].rank}}.{{userFavoriteTracks.name}} by {{userFavoriteTracks.artist.name}} </h2> Play Count: {{userFavoriteTracks.playcount}}  </p>
            <a href= {{userFavoriteTracks.url}} target='_blank' class="display-6">Check it out!</a>
        </ul>
        {% endfor %}
</div>


{% endblock %}


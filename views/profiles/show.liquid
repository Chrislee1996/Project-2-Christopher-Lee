{% layout 'layout.liquid'%}
{% block content %}
<div class="container; text-center" style="border: rgb(58, 54, 54) 2px solid;"> 
    <h3> Profile </h6>
    <h2> {{username | capitalize}}</h4>
        <p>{{profile.id}} </p>
</div>

<div class="container text-center">
    <form method ="POST"> 
    <a href="/profiles" class="btn btn-outline-light" for="btn-check-2">Hide</a>
    {% for users in user %}
    <ul> 
        <p> <h2> {{users['@attr'].rank}}.{{users.name}} by {{users.artist.name}} </h2> 
       <a href={{users.url}} target="_blank"><img src = {{users.image[3]['#text']}}></a> </br>
        Play Count: {{users.playcount}}  </p>

    </ul>
    {% endfor %}
</div>


{% endblock %}
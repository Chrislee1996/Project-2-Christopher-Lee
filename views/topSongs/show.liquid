{% layout 'layout.liquid'%}

{% block content %}
    <body class="text-center">
        <form action="/topSongs/" method ="POST">
            <input type="text"  name="song" placeholder= 'Enter an Artist'/> 
            <input type="submit" class="btn btn-success">
        </form> </br>
        <h1 class="display-3">Results for {{songs[0].artist.name}}:</h1>
        {% for song in songs %}
            <ul> 
                <h5 class="display-5 "> {{song['@attr'].rank}}.{{song.name}}:</h5> </br>
                Play Count: {{song.playcount}} </br>
                <a href={{song.url}} target="_blank">Check it out!</a> </br>
            </ul>
        {% endfor %}


{% endblock %}